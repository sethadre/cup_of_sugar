<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="@color/white"
    tools:context=".HelpActivity">

    <TextView
        android:id="@+id/help_ys"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Help Yourself"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/supportButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/help_cos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Help Cup Of Sugar"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/adButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resourcesButton" />

    <Button
        android:id="@+id/supportButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:text="CONTACT SUPPORT"
        android:textSize="24sp"
        app:backgroundTint="@color/green"
        app:layout_constraintBottom_toTopOf="@+id/resourcesButton"
        app:layout_constraintEnd_toEndOf="@+id/help_ys"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/help_ys"
        app:layout_constraintTop_toBottomOf="@+id/help_ys" />

    <Button
        android:id="@+id/resourcesButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:text="FIND RESOURCES"
        android:textSize="24sp"
        app:backgroundTint="@color/green"
        app:layout_constraintBottom_toTopOf="@id/help_cos"
        app:layout_constraintEnd_toEndOf="@+id/help_ys"
        app:layout_constraintStart_toStartOf="@+id/help_ys"
        app:layout_constraintTop_toBottomOf="@+id/supportButton" />

    <Button
        android:id="@+id/adButton"
        android:onClick="show"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:text="Watch Ads"
        android:textSize="24sp"
        app:backgroundTint="@color/green"
        app:layout_constraintBottom_toTopOf="@id/donateButton"
        app:layout_constraintEnd_toEndOf="@+id/help_ys"
        app:layout_constraintStart_toStartOf="@+id/help_ys"
        app:layout_constraintTop_toBottomOf="@+id/help_cos" />

    <Button
        android:id="@+id/donateButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:text="Donate"
        android:textSize="24sp"
        app:backgroundTint="@color/green"
        app:layout_constraintBottom_toTopOf="@id/bottomAppBar"
        app:layout_constraintEnd_toEndOf="@+id/help_ys"
        app:layout_constraintStart_toStartOf="@+id/help_ys"
        app:layout_constraintTop_toBottomOf="@id/adButton" />

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
        android:layout_width="413dp"
        android:layout_height="82dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="1dp"
        app:backgroundTint="@color/green"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="BottomAppBar,MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/profileActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/bottomAppBar"
        app:srcCompat="@drawable/icon_button_user" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/forumsActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profileActionButton"
        app:srcCompat="@drawable/icon_button_chat" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/homeActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        app:backgroundTint="@color/teal_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/forumsActionButton"
        app:srcCompat="@drawable/icon_button_home" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/helpActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/homeActionButton"
        app:srcCompat="@drawable/icon_button_help" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/settingsActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/helpActionButton"
        app:srcCompat="@drawable/icon_button_settings" />

</androidx.constraintlayout.widget.ConstraintLayout>