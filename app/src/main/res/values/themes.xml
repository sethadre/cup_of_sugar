<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CupOfSugar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Font -->
        <item name = "fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <!-- Background -->
        <item name = "backgroundColor">@color/beige</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TopBar" >
        <!-- Primary brand color. -->
        <item name="android:background">@color/light_green</item>
        <!-- Font -->
        <item name = "fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/beige</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BottomBar" >
        <!-- Primary brand color. -->
        <item name="android:backgroundTint">@color/light_green</item>
    </style>


</resources>

